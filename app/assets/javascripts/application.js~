	var Bookmark = Backbone.Model.extend({

		defaults : function(){
		
			return {
				title : "empty"
				};
		},
		initialize : function() {
			alert("New Bookmark");
		},
		
		clear: function(){
		
			this.destroy();
		}
		

	});
	
	var BookmarkList = Backbone.Collection.extend({
		model: Bookmark,
		//localStorage : new Store("bookmark-tp")
	});
	
	var Bookmarks = new BookmarkList();
	
	var BookmarkView = Backbone.View.extend({
	
		tagName: "table",
		
		template: _.template($('#bookmark-template').html()),
		
		events: {
		
		"click td.remove" : "clear",
		},
		
		initialize: function() {
			  this.model.bind('destroy', this.remove, this);
			},
		
		render: function(){
		
			this.$el.html(this.template(this.model.toJSON()));
			return this;
		},
		
		clear: function(){
		
			this.model.clear();
		
		},
	
	});
	
	var AppView = Backbone.View.extend({
	
		
		el:$('table.data'),
		
		initialize: function(){
			
			alert("App Intialized");
		},
		events: {
		
			"click #new_bookmark" : "add_new"
		},
		
		add_new: function(){
		
			
			alert();
		},
		
	});
	
$(function(){

	var app = new AppView();
});
