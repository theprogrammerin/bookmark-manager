$_color : #333;
  
 @mixin round($top, $right:0, $bottom:0, $left:0){
	
	$top : $top + px;
	$right : $right + px;
	$bottom : $bottom + px;
	$left : $left + px;
	border-radius: $top $right $bottom $left;
	-moz-border-radius: $top $right $bottom $left;
 	-webkit-border-radius: $top $right $bottom $left;
 }
 
 @mixin linear-grad($direction, $start, $end){
 
 	 background:	$start;
 	 background: 	-moz-linear-gradient($direction, $start, $end);
 	 background:	-webkit-linear-gradient($direction, $start, $end);
 	 background:	-ms-linear-gradient($direction, $start, $end);
 	 background:	-o-linear-gradient($direction, $start, $end);
 }
 
